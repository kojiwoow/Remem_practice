<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.domik.remem.MainActivity"
    android:background="#ffffff"
    android:id="@+id/actionbar_tab_2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name"
        android:id="@+id/textView6"
        android:layout_gravity="center_horizontal"
        android:textColor="#787878"
        android:textSize="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="your number"
        android:id="@+id/textView8"
        android:textColor="#6b6b6b"
        android:textSize="34dp"
        android:inputType="phone"
        android:layout_weight="0.20"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView4"
        android:src="@drawable/icon"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toStartOf="@+id/textView8" />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageView5"
        android:src="@drawable/mail"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="your email"
        android:id="@+id/textView7"
        android:textColor="#6f6f6f"
        android:textIsSelectable="false"
        android:textSize="34dp"
        android:layout_below="@+id/textView8"
        android:layout_toEndOf="@+id/imageView4"
        android:inputType="textEmailAddress" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Timetable"
        android:id="@+id/timetable"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@android:color/holo_blue_dark"
        android:layout_above="@+id/premium"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Premium account"
        android:id="@+id/premium"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="#52ac62"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp" />

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:id="@+id/buttonLoadPicture"
        android:src="@drawable/plus1"
        android:focusableInTouchMode="false"
        android:onClick="loadImagefromGallery"
        android:background="#00ffffff"
        android:layout_alignBottom="@+id/imgView"
        android:layout_toEndOf="@+id/textView8" />


</RelativeLayout>
